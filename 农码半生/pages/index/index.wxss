/**index.wxss**/

.container {
  height: 100%;
  width: 100%;
}

.c_header {
  background: #31a6e0;
  width: 100%;
  padding: 0px 10px 10px;
  box-sizing: border-box;
}

.c_header2 {
  display: flex;
  flex-direction: row;
  padding: 10px 0px;
}

.c_header2 image {
  width: 30px;
  height: 30px;
  position: absolute;
}

.c_header2 input {
  background: #fff;
  height: 30px;
  border-radius: 20px;
  margin: 0px;
  font-size: 14px;
  width: 75%;
  padding-left: 30px;
}

.c_header2 button {
  font-size: 14px;
  border-radius: 10px;
  background: #ff7516;
  color: #fff;
  margin: 0px;
  line-height: 30px;
}

.c_header1 {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.c_header1 text {
  font-size: 14px;
  border-radius: 20px;
  padding: 0px;
  margin: 0px;
  margin-right: 10px;
  color: #fff;
}

.c_kc .b1 {
  border-right: 1px dashed #31a6e0;
  border-bottom: 1px dashed #31a6e0;
}

.c_kc .b2 {
  border-top: 1px dashed #31a6e0;
  border-left: 1px dashed #31a6e0;
}

.c_info {
  width: 100%;
  padding: 0px 20px 20px 20px;
  box-sizing: border-box;
}

.c_content {
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1px dashed #c3c3c3;
  align-items: center;
  padding: 10px 0px;
  justify-content: space-between;
}

.c_content image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.c_content text {
  font-size: 14px;
}

.c_content .c_date {
  color: #c3c3c3;
}
